<%= render "dashboard/header" %>

<main class="white">

  <div class="row">
    <div class="col s4 white">
      <%= render "dashboard/profile" %>
    </div>

    <div class="col s8 white">

      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <div class="collapsible-header">
            <div class="row center-align">

              <div class="col s4">
                Owner
              </div>
              <div class="col s2">
                Name
              </div>
              <div class="col s3">
                Description
              </div>
              <div class="col s1">
                Members
              </div>
              <div class="col s2">
              </div>
              <div class="col s2">
              </div>

            </div>
          </div>
        </li>
      </ul>

      <% if @groups %>

        <%= render partial: "dashboard/group", collection: @groups %>

      <% end %>
    </div>

  </div>

</main>
