<%= form_tag follows_path, method: method do %>
  <%= fields_for :follows do |follows| %>

    <% authorizations.each do |auth| %>

      <%= follows.fields_for auth.provider do |provider| %>

        <%= provider.hidden_field "user_to_follow_uid", value: auth.uid  %>

      <% end %>

    <% end %>

  <% end %>
  <%= button_tag type: :submit, class: button_classes do %>
    <i class="medium material-icons"><%= button_icon %></i>
  <% end %>
<% end %>
